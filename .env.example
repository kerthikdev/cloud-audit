APP_ENV=development
APP_VERSION=1.0.0
LOG_LEVEL=INFO

# ── AWS ───────────────────────────────────────────────────────────
# Set MOCK_AWS=true to run offline (no AWS account needed)
# Set MOCK_AWS=false to scan real AWS — credentials can also be set via the Settings UI
MOCK_AWS=true

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

AWS_REGION=ap-south-1
SCAN_REGIONS=ap-south-1

CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Slack (optional) — post audit reports to your Slack channel
SLACK_WEBHOOK_URL=
